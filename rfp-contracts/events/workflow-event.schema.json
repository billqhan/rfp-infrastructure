{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rfp-platform.example.com/schemas/workflow-event.json",
  "title": "Workflow Event",
  "description": "Event schema for RFP workflow state changes",
  "type": "object",
  "required": ["eventId", "eventType", "timestamp", "workflowId", "step", "status"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "eventType": {
      "type": "string",
      "enum": ["workflow.started", "workflow.step.completed", "workflow.step.failed", "workflow.completed", "workflow.failed"],
      "description": "Type of workflow event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "workflowId": {
      "type": "string",
      "description": "Unique identifier for the workflow instance"
    },
    "step": {
      "type": "string",
      "enum": ["download", "process", "match", "generate_reports", "notify"],
      "description": "Current workflow step"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "failed"],
      "description": "Status of the workflow step"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the event",
      "properties": {
        "opportunitiesProcessed": {
          "type": "integer",
          "minimum": 0
        },
        "matchesFound": {
          "type": "integer",
          "minimum": 0
        },
        "reportsGenerated": {
          "type": "integer",
          "minimum": 0
        },
        "errorMessage": {
          "type": "string"
        },
        "duration": {
          "type": "number",
          "description": "Duration in seconds"
        }
      }
    },
    "triggeredBy": {
      "type": "string",
      "enum": ["schedule", "manual", "api"],
      "description": "How the workflow was triggered"
    }
  }
}
